extends layout

block content
  h1 #{title}
  form(method="POST" action="/new" class="form")
    label(for="name") Name
    input(type="text", name="name", style="display: block; margin-bottom: 10px;")
    label(for="msg") Msg
    textarea(name="msg", cols="30", rows="10", style="display: block; margin-bottom: 10px;")
    input(type="submit", value="Send")